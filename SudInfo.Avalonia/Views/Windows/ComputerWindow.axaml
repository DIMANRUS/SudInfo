<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="SudInfo.Avalonia.Views.Windows.ComputerWindow"
        xmlns:viewModels="clr-namespace:SudInfo.Avalonia.ViewModels.WindowViewModels;assembly=SudInfo.Avalonia"
        xmlns:i="using:Avalonia.Xaml.Interactivity"
        xmlns:ia="using:Avalonia.Xaml.Interactions.Core"
        Height="540"
        Width="300"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        x:DataType="viewModels:ComputerWindowViewModel"
        Title="Компьютер">
  <i:Interaction.Behaviors>
    <ia:EventTriggerBehavior EventName="Initialized">
      <ia:InvokeCommandAction Command="{Binding Initialized}"/>
    </ia:EventTriggerBehavior>
  </i:Interaction.Behaviors>
  <StackPanel Margin="10"
              Spacing="5">
    <TextBox Text="{Binding Computer.Name}"
             MaxLength="50"
             Watermark="Название"/>
    <TextBox Text="{Binding Computer.Ip}"
             MaxLength="15"
             Watermark="IP адрес"/>
    <ComboBox
      HorizontalAlignment="Stretch"
      Items="{Binding OsesList}"
      SelectedItem="{Binding Computer.OS}"/>
    <TextBox Text="{Binding Computer.CPU}"
             MaxLength="15"
             Watermark="CPU"/>
    <TextBox Text="{Binding Computer.GPU}"
             MaxLength="15"
             Watermark="GPU (Необязательно)"/>
    <TextBox Text="{Binding Computer.ROM}"
             MaxLength="5"
             Watermark="Размер диска (ГБ)"/>
    <TextBox Text="{Binding Computer.RAM}"
             MaxLength="2"
             Watermark="Оперативная память (ГБ)"/>
    <TextBox Text="{Binding Computer.SerialNumber}"
             MaxLength="20"
             Watermark="Серийный номер"/>
    <TextBox Text="{Binding Computer.InventarNumber}"
             MaxLength="20"
             Watermark="Инвентарный номер"/>
    <StackPanel Orientation="Horizontal">
      <CheckBox Name="IsUserBox"
                IsChecked="{Binding IsUser}"/>
      <ComboBox
        Items="{Binding Users}"
        SelectedItem="{Binding Computer.User}"
        Width="252"
        IsEnabled="{Binding #IsUserBox.IsChecked}"
        AutoScrollToSelectedItem="True"
        PlaceholderText="Сотрудник">
        <ComboBox.DataTemplates>
          <DataTemplate>
            <TextBlock Text="{Binding FIO}"/>
          </DataTemplate>
        </ComboBox.DataTemplates>
      </ComboBox>
    </StackPanel>
    <Button Content="{Binding SaveButtonText}"
            Command="{Binding SaveComputer}"
            Cursor="Hand"
            FontWeight="Bold"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Center"/>
  </StackPanel>
</Window>