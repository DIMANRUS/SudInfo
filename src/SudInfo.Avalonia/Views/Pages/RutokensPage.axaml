<UserControl
    x:Class="SudInfo.Avalonia.Views.Pages.RutokensPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Avalonia.Xaml.Interactivity"
    xmlns:ia="using:Avalonia.Xaml.Interactions.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:SudInfo.EfDataAccessLibrary.Models"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
  <i:Interaction.Behaviors>
    <ia:EventTriggerBehavior EventName="Initialized">
      <ia:InvokeCommandAction Command="{Binding LoadRutokens}" />
    </ia:EventTriggerBehavior>
  </i:Interaction.Behaviors>
  <Grid ColumnDefinitions="140, *, 40,40" RowDefinitions="40,*">
    <TextBlock
        Margin="10"
        FontSize="20"
        FontWeight="Bold"
        Text="ЭЦП Рутокен" />
    <Image Grid.Column="2" Source="/Assets/Images/refresh.png">
      <i:Interaction.Behaviors>
        <ia:EventTriggerBehavior EventName="Tapped">
          <ia:InvokeCommandAction Command="{Binding RefreshRutokens}" />
        </ia:EventTriggerBehavior>
      </i:Interaction.Behaviors>
    </Image>
    <Image Grid.Column="3" Source="/Assets/Images/add.png">
      <i:Interaction.Behaviors>
        <ia:EventTriggerBehavior EventName="Tapped">
          <ia:InvokeCommandAction Command="{Binding OpenAddRutokenWindow}" />
        </ia:EventTriggerBehavior>
      </i:Interaction.Behaviors>
    </Image>
    <DataGrid
        Grid.Row="1"
        Grid.ColumnSpan="6"
        ItemsSource="{Binding Rutokens}"
        SelectedItem="{Binding SelectedRutoken}">
      <DataGrid.ContextMenu>
        <ContextMenu>
          <MenuItem Header="Редактировать" Command="{Binding OpenEditRutokenWindow}"/>
          <MenuItem Header="Удалить" Command="{Binding RemoveRutoken}"/>
        </ContextMenu>
      </DataGrid.ContextMenu>
      <DataGrid.Columns>
        <DataGridTextColumn
            Binding="{Binding SerialNumber}"
            Header="Серийный номер"
            IsReadOnly="True" />
        <DataGridTextColumn
            Binding="{Binding EndDateCertificate, StringFormat='dd.MM.yyyy'}"
            Header="Дата окончания сертификата"
            IsReadOnly="True" />
        <DataGridTextColumn
            Binding="{Binding User.FIO}"
            Header="ФИО сотрудника"
            IsReadOnly="True" />
        <DataGridTextColumn
            Width="*"
            Binding="{Binding User.NumberCabinet}"
            Header="Кабинет"
            IsReadOnly="True" />
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>